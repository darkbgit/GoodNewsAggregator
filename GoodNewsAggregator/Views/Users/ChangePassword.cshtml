@model GoodNewsAggregator.Models.ViewModels.Users.ChangePasswordViewModel

@{
    ViewData["Title"] = "Добавление пользователя";
}

<h2>Изменение пароля для пользователя @Model.Email</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Новый пароль</label>
                <input type="text" asp-for="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

