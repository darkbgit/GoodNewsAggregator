@model GoodNewsAggregator.Models.ViewModels.Account.RegisterViewModel

<h2>Регистрация нового пользователя</h2>

<form method="post" asp-controller="Account" asp-action="Register" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label>
        <br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
</form>