@model IEnumerable<GoodNewsAggregator.Models.ViewModels.RssList>

<div class="accordion-flush col-md-3" id="accordionRssSources">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingSources">
            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Выбрать источник
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingSources"
             data-bs-parent="#accordionSources">
            <div class="accordion-body">
                <div class="row">
                    @foreach (var source in Model)
                    {
                        <div class="form-check form-switch">
                            <label class="form-check-label" for="flexCheckBox">
                                @source.Name
                            </label>
                            <input class="form-check-input" type="checkbox"
                                   id="flexCheckBox" value="@source.Id"
                                   @*onchange="OnChangeCheckBoxFunc(this)"*@ checked="@source.Checked" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
