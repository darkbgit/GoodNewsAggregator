@model GoodNewsAggregator.Models.ViewModels.Users.ChangeRoleViewModel

@{
    ViewData["Title"] = "Изменение ролей";
}

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" asp-controller="Roles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")/>@role.Name<br />
        }
    </div>
    <button type="submit" class="btn btn-outline-secondary">Сохранить</button>
</form>